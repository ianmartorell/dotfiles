bindsym XF86Display exec "arandr"

bindsym $mod+a exec "urxvtc -e alsamixer"
bindsym $mod+Shift+a exec "pavucontrol"

# Keyboard layout

set $ms Mod4
bindsym $ms+e exec setxkbmap es
bindsym $ms+u exec setxkbmap us
bindsym $ms+space exec "(setxkbmap -query | grep -q 'layout:\s\+us') && setxkbmap es || setxkbmap us"

bar {
        position top
        status_command ~/.yadr/i3/bin/conky-wrapper
        colors {
                statusline #AAAAAA
                background $gray2
                focused_workspace $gray2 $gray2 #FFFFFF
                inactive_workspace $gray1 $gray1 #AAAAAA
        }
}

exec_always feh --bg-scale "$HOME/Pictures/Wallpapers/wallpaper"

