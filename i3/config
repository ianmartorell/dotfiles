# use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec urxvtc

# kill focused window
bindsym $mod+c kill

# start dmenu
# bindsym $mod+p exec "dmenu_run -nb black -p run"
# bindsym $mod+Shift+p exec "~/.bin/pass-autotype-dmenu"

# start rofi
bindsym $mod+p exec rofi -show run -fuzzy -location 0 -lines 3 -auto-select -eh 2 -width 100 -padding 430 -opacity "85" -bw 0 -bc "$gray1" -bg "$gray1" -fb "$#ffffff" -hlbg "$gray1" -hlfg "#9575cd" -font "System San Francisco Display 24"

# screen lock
bindsym Control+$mod+l exec slimlock
# bindsym Control+$mod+l exec i3lock --color "#000000"

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# split in horizontal orientation
bindsym $mod+g split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen

# change container layout (tabbed, toggle split)
bindsym $mod+n layout tabbed
bindsym $mod+m layout toggle split

# container navigation
bindsym $mod+d focus parent
bindsym $mod+b focus child

# move container between displays
bindsym $mod+semicolon move workspace to output right

# toggle tiling / floating
bindsym $mod+Shift+f floating toggle

# switch to last workspace
bindsym $mod+space workspace back_and_forth

# set $workspace1 "1: Browser"
# set $workspace2 "2: Terminals"
# set $workspace3 "3: Editor"
# set $workspace4 "4"
# set $workspace5 "5"
# set $workspace6 "6"
# set $workspace7 "7"
# set $workspace8 "8"
