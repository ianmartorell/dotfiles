set $mod Mod1

font pango:System San Francisco Display Thin 11
# font pango:System San Francisco Display 10
# font pango:Inconsolata-dz for Powerline 10
# font pango:-misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1, Icons 9
# font Liberation\ Mono 11px

new_window pixel				3
focus_follows_mouse			yes
# force_focus_wrapping		no
hide_edge_borders				both

set $gray1 #373d48
set $gray2 #29303a

client.focused            $gray1   $gray1   #FFFFFF   $gray1
client.focused_inactive   $gray2   $gray2   #FFFFFF   #000000
client.unfocused          $gray2   $gray2   #FFFFFF   #000000

